<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @semester.name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @semester.status %>
</p>

<div id="recitals">
	<table class="table">
		<thead>
			<tr>
				<th>Recital</th>
				<th>Date & Time</th>
				<th>Status</th>
			</tr>
		</thead>
		<tbody>
			<% @semester.recitals.each do |recital| %>
				<tr>
			
				<td><%= recital.name %></td>
				<td><%= recital.date.strftime("%A, %b %d | %l:%M %p") %></td>
				<!-- How to make the below work? -->
				<td style="color: blue">Checkboxes (attended/missed/excused) & SUBMIT button</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div class="card" id="new-recital">
	<div class="card-body">
		<h2>Add a New Recital</h2>
	    <%= render 'recitals/form', recital: @recital %>
	</div>

</div>

<%= link_to 'Edit', edit_semester_path(@semester) %> |
<%= link_to 'Back', semesters_path %>
